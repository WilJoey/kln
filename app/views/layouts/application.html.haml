!!!
%html

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/

    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

    = stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/redmond/jquery-ui.css", "compiled/application", "compiled/pagination"
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js", "jquery.rails.js", "application"

    = #javascript_include_tag :defaults
    = csrf_meta_tag
    = yield(:head)

  %body
    #container
      #user_nav
        - if user_signed_in?
          = t("devise_view.shared.signed_in_as")
          %strong
            = link_to current_user.email, edit_user_registration_path
          \.
          = t("devise_view.shared.not_you")
          \#{link_to t("devise_view.shared.sign_out"), destroy_user_session_path}
        - else
          = link_to t("devise_view.shared.sign_up"), new_user_registration_path
          = t("devise_view.shared.or")
          \#{link_to t("devise_view.shared.sign_in"), new_user_session_path}

      #locale
        - for k, v in AVAILABLE_LOCALES
          - if I18n.locale.to_s == k
            = AVAILABLE_LOCALES[I18n.locale.to_s]
          - else
            = link_to "#{v}", url_for( {:controller => self.controller_name, :action => self.action_name, :locale => "#{k}"} )


      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      %br

      - if show_title?
        %h1= yield(:title)

      = yield

